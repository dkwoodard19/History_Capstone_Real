@model IEnumerable<BusinessLogicLayer.EventBLL>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @Html.ActionLink("Stats by Figure", "FigureStats")
</p>
<p>
    @Html.ActionLink("Stats by Civilization", "CivStats")
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.EventID)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.EventName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EventDate)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.FigureID)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FigureName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.CivID)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.CivName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.EventID)
        @*</td>
        <td>*@
            @Html.DisplayFor(modelItem => item.EventName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EventDate)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.FigureID)
        @*</td>
        <td>*@
            @Html.DisplayFor(modelItem => item.FigureName)
        </td>
        <td>
            @Html.HiddenFor(modelItem => item.CivID)
        @*</td>
        <td>*@
            @Html.DisplayFor(modelItem => item.CivName)
        </td>
        <td>
            @if (User.IsInRole(Constants.Dev) | (User.IsInRole(Constants.Ad)) | (User.IsInRole(Constants.Hist)))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.EventID })
            }
            @Html.Raw("|")
            @Html.ActionLink("Details", "Details", new { id = item.EventID })
            @Html.Raw("|")
            @if (User.IsInRole(Constants.Dev) | (User.IsInRole(Constants.Ad)))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.EventID })
            }
        </td>
    </tr>
}

</table>

@model IEnumerable<BusinessLogicLayer.UserBLL>

@{
    ViewBag.Title = "Index";
}

<h2>Users</h2>

<p>
    @if (User.IsInRole(Constants.Dev))
    {
        @Html.ActionLink("Create New", "Create")
    }
</p>
<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Hash)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salt)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.RoleID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.UserID)
        @*</td>
        <td>*@
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Hash)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salt)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.RoleID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @if (User.IsInRole(Constants.Developer))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.UserID })
            }
            @Html.Raw("|")
            @Html.ActionLink("Details", "Details", new { id = item.UserID })
            @Html.Raw("|")
            @if (User.IsInRole(Constants.Developer) | (User.IsInRole(Constants.Ad)))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.UserID })
            }
        </td>
    </tr>
}

</table>
